{
    "name": "Xilinx crop_pipeline YUV420_NPC8 L3 Test",
    "description": [
        "crop_pipeline L3 function example"
    ],
    "flow": "system",
    "platform_allowlist": [
	"vek280",
	"vek385"
    ],
    "platform_blocklist": [
        "u280",
        "u250"
    ],
    "platform_properties": {
        "vek280": {
            "host": {
                "compiler": {
                    "includepaths": [
                        "$(SYSROOT)/usr/include",
                        "$(SYSROOT)/usr/include/opencv4"
                    ]
                },
                "linker": {
                    "librarypaths": [
                        "$(SYSROOT)/usr/lib",
                        "${SYSROOT}/lib"
                    ]
                },
                "compiler_x86": {
                    "includepaths": [
                        "$(OPENCV_INCLUDE)"
                    ]
                },
                "linker_x86": {
                    "librarypaths": [
                        "$(OPENCV_LIB)"
                    ]
                }
            }
        },
        "vek385": {
            "host": {
                "compiler": {
                    "includepaths": [
                        "$(SYSROOT)/usr/include",
                        "$(SYSROOT)/usr/include/opencv4"
                    ]
                },
                "linker": {
                    "librarypaths": [
                        "$(SYSROOT)/usr/lib",
                        "${SYSROOT}/lib"
                    ]
                },
                "compiler_x86": {
                    "includepaths": [
                        "$(OPENCV_INCLUDE)"
                    ]
                },
                "linker_x86": {
                    "librarypaths": [
                        "$(OPENCV_LIB)"
                    ]
                }
            }
        }

    },
    "gui": false,
    "launch": [
        {
            "target": "hw_emu",
            "cmd_args": "LIB_DIR/data/HD.jpg",
            "name": "hw_emu",
            "ld_library_path": [
                "$(OPENCV_LIB)",
                "$(LD_LIBRARY_PATH)",
                "$(XILINX_XRT)/lib"
            ]
        },
        {
            "target": "hw",
            "cmd_args": "LIB_DIR/data/HD.jpg",
            "name": "Hardware",
            "ld_library_path": [
                "$(OPENCV_LIB)",
                "$(LD_LIBRARY_PATH)",
                "$(XILINX_XRT)/lib"
            ]
        }
    ],
    "data": [
        "LIB_DIR/data/4k.jpg",
        "LIB_DIR/data/HD.jpg"
    ],
    "host": {
        "host_exe": "crop",
        "compiler": {
            "sources": [
                "LIB_DIR/L3/examples/crop_pipeline/xf_crop_pipeline_tb.cpp",
                "LIB_DIR/ext/xcl2/xcl2.cpp"
            ],
            "includepaths": [
                "LIB_DIR/L3/tests/crop_pipeline/YUV420_NPC8",
		"LIB_DIR/L3/examples/crop_pipeline"
            ],
            "options": "-O3  -I$(XILINX_HLS)/include -I$(XILINX_HLS)/include -I$(XILINX_HLS)/include",
            "symbols": [
                "__SDSVHLS__"
            ]
        }
    },
    "v++": {
        "compiler": {
            "symbols": [],
           "includepaths": [
                "LIB_DIR/L3/tests/crop_pipeline/YUV420_NPC8",
                "LIB_DIR/L3/examples/crop_pipeline"
            ],
            "clflags": []
        }
    },
    "containers": [
        {
            "name": "krnl_crop_nv122rgb",
            "accelerators": [
                {
                    "name": "crop_nv122rgb",
                    "location": "LIB_DIR/L3/examples/crop_pipeline/xf_crop_pipeline_accel.cpp",
                    "frequency": 300.0
                }
            ],
            "frequency": 300.0
        }
    ],
    "check_env": [
        {
            "env": "OPENCV_INCLUDE",
            "platform": [
                "u200",
                "u50"
            ],
            "echo": "Cannot find OpenCV include path. Please set OPENCV_INCLUDE variable"
        },
        {
            "env": "OPENCV_LIB",
            "platform": [
                "u200",
                "u50"
            ],
            "echo": "Cannot find Opencv lib path. Please set OPENCV_LIB variable"
        }
    ],
    "testinfo": {
        "disable": false,
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": {
                    "vitis_hw_build": 40960,
                    "vitis_hw_emu": 28672,
                    "vitis_hw_run": 10240
                },
                "max_time_min": {
                    "vitis_hw_build": 470,
                    "vitis_hw_emu": 470,
                    "vitis_hw_run": 30
                }
            }
        ],
        "targets": [
            "vitis_hw_emu",
            "vitis_hw_build",
            "vitis_hw_run"
        ],
        "category": "full"
    }
}
