{
    "gui": true,
    "name": "Xilinx MC European Engine Benchmark",
    "description": "The European option pricing engine uses Monte Carlo Simulation to estimate the value of European Option",
    "flow": "vitis",
    "platform_type": "pcie",
    "platform_allowlist": [
        "u250"
    ],
    "platform_blocklist": [
        "zc"
    ],
    "platform_properties": {
        "u250": {
            "host": {
                "compiler": {
                    "symbols": []
                }
            },
            "v++": {
                "compiler": {
                    "clflags": [
                        "--config PROJECT/conn_u250.cfg"
                    ]
                }
            }
        }
    },
    "launch": [
        {
            "cmd_args": " -xclbin BUILD/kernel_mc.xclbin",
            "name": "generic launch for all flows",
            "ld_library_path": [
                "$(XILINX_HLS)/lnx64/tools/fpo_v7_1"
            ]
        }
    ],
    "host": {
        "host_exe": "test.exe",
        "compiler": {
            "sources": [
                "host/test.cpp",
                "LIB_DIR/ext/xcl2/xcl2.cpp"
            ],
            "includepaths": [
                "LIB_DIR/L1/include",
                "LIB_DIR/L2/include",
                "LIB_DIR/L2/benchmarks/MCEuropeanEngine/host",
                "LIB_DIR/ext/xcl2",
                "LIB_DIR/L2/benchmarks/MCEuropeanEngine/kernel"
            ],
            "options": "-O3  -I$(XILINX_HLS)/include",
            "symbols": []
        },
        "linker": {
            "options": " -L$(XILINX_HLS)/lnx64/tools/fpo_v7_1 -lgmp -lmpfr -lIp_floating_point_v7_1_bitacc_cmodel"
        }
    },
    "v++": {
        "compiler": {
            "includepaths": [
                "LIB_DIR/L1/include",
                "LIB_DIR/L2/include",
                "LIB_DIR/L2/benchmarks/MCEuropeanEngine/kernel"
            ]
        }
    },
    "containers": [
        {
            "accelerators": [
                {
                    "location": "kernel/kernel_mc.cpp",
                    "frequency": 300,
                    "clflags": " -D DPRAGMA",
                    "name": "kernel_mc",
                    "num_compute_units": 4,
                    "compute_units": [
                        {
                            "name": "kernel_mc_1",
                            "slr": "SLR0",
                            "arguments": [
                                {
                                    "name": "m_axi_gmem",
                                    "memory": "DDR[0]"
                                }
                            ]
                        },
                        {
                            "name": "kernel_mc_2",
                            "slr": "SLR1",
                            "arguments": [
                                {
                                    "name": "m_axi_gmem",
                                    "memory": "DDR[1]"
                                }
                            ]
                        },
                        {
                            "name": "kernel_mc_3",
                            "slr": "SLR2",
                            "arguments": [
                                {
                                    "name": "m_axi_gmem",
                                    "memory": "DDR[2]"
                                }
                            ]
                        },
                        {
                            "name": "kernel_mc_4",
                            "slr": "SLR3",
                            "arguments": [
                                {
                                    "name": "m_axi_gmem",
                                    "memory": "DDR[3]"
                                }
                            ]
                        }
                    ]
                }
            ],
            "frequency": 300,
            "name": "kernel_mc"
        }
    ],
    "testinfo": {
        "disable": false,
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": {
                    "vitis_hw_build": 81920,
                    "vitis_hw_emu": 30370,
                    "vitis_sw_emu": 10240,
                    "vitis_hw_run": 10240
                },
                "max_time_min": {
                    "vitis_hw_build": 1200,
                    "vitis_hw_emu": 300,
                    "vitis_sw_emu": 60,
                    "vitis_hw_run": 10
                }
            }
        ],
        "targets": [
            "vitis_sw_emu",
            "vitis_hw_emu"
        ],
        "category": "canary"
    }
}