{
    "gui": false,
    "name": "Xilinx MC Barrier Option Pricing Engine Test",
    "description": "The Barrier option pricing engine uses Monte Carlo Simulation method to estimate the payoff of barrier option.",
    "flow": "system",
    "platform_type": "pcie",
    "platform_allowlist": [
        "u250"
    ],
    "platform_blocklist": [
        "zc"
    ],
    "platform_properties": {
        "u250": {
            "v++": {
                "compiler": {
                    "clflags": [
                        "--config PROJECT/conn_u250.cfg"
                    ]
                }
            }
        }
    },
    "launch": [
        {
            "cmd_args": " -xclbin BUILD/MCBarrierNoBiasEngine_k.xclbin",
            "name": "generic launch for all flows",
            "ld_library_path": [
                "$(XILINX_HLS)/lnx64/lib/csim",
                "$(XILINX_HLS)/lnx64/tools/fpo_v7_1"
            ]
        }
    ],
    "host": {
        "host_exe": "host.exe",
        "compiler": {
            "sources": [
                "host/main.cpp",
                "LIB_DIR/ext/xcl2/xcl2.cpp"
            ],
            "includepaths": [
                "LIB_DIR/L1/include",
                "LIB_DIR/L2/include",
                "LIB_DIR/L2/tests/MCBarrierEngine/host",
                "LIB_DIR/L2/tests/MCBarrierEngine/kernel",
                "LIB_DIR/ext/xcl2"
            ],
            "options": "-O3  -I$(XILINX_HLS)/include"
        },
        "linker": {
            "options": " -L$(XILINX_HLS)/lnx64/tools/fpo_v7_1 -lgmp -lmpfr -lIp_floating_point_v7_1_bitacc_cmodel"
        }
    },
    "v++": {
        "compiler": {
            "includepaths": [
                "LIB_DIR/L1/include",
                "LIB_DIR/L2/include",
                "LIB_DIR/L2/tests/MCBarrierEngine/kernel"
            ]
        }
    },
    "containers": [
        {
            "accelerators": [
                {
                    "location": "kernel/MCBarrierNoBiasEngine_k0.cpp",
                    "frequency": 200,
                    "clflags": "-D DPRAGMA",
                    "name": "MCBarrierNoBiasEngine_k0",
                    "num_compute_units": 1,
                    "compute_units": [
                        {
                            "name": "MCBarrierNoBiasEngine_k0_1",
                            "slr": "SLR0",
                            "arguments": [
                                {
                                    "name": "m_axi_gmem0",
                                    "memory": "DDR[0]"
                                },
                                {
                                    "name": "m_axi_gmem1",
                                    "memory": "DDR[0]"
                                }
                            ]
                        }
                    ]
                }
            ],
            "frequency": 200,
            "name": "MCBarrierNoBiasEngine_k"
        }
    ],
    "testinfo": {
        "disable": false,
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "max_memory_MB": {
                    "vitis_hw_build": 40960,
                    "vitis_hw_emu": 28672,
                    "vitis_hw_run": 10240
                },
                "max_time_min": {
                    "vitis_hw_build": 470,
                    "vitis_hw_emu": 300,
                    "vitis_hw_run": 10
                }
            }
        ],
        "targets": [
            "vitis_hw_emu",
            "vitis_hw_build",
            "vitis_hw_run"
        ],
        "category": "canary"
    }
}